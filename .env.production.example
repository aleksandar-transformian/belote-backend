# Application
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database (Use strong passwords!)
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=belote_production
DATABASE_USER=belote_prod_user
DATABASE_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456
REDIS_DB=0

# JWT (Generate strong secrets!)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_JWT_SECRET_VERY_LONG_RANDOM_STRING_789
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=CHANGE_THIS_REFRESH_SECRET_DIFFERENT_LONG_STRING_012
JWT_REFRESH_EXPIRES_IN=30d

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.io
SOCKET_CORS_ORIGIN=https://your-frontend-domain.com
SOCKET_PING_TIMEOUT=30000
SOCKET_PING_INTERVAL=25000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Game Configuration
MAX_RECONNECTION_TIME=60000
MATCHMAKING_TIMEOUT=120000
GAME_TURN_TIMEOUT=60000
